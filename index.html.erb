<div class="mdl-grid product-list">
	<% 24.times do %>
	
	<!-- 沒有 favorite -->
	<div class="product-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--3-col mdl-cell--2-col-tablet mdl-cell--2-col-phone" style="background: url('http://lorempixel.com/400/400') center / cover;">
		<div class="mdl-card--expand">
			<a href="product.html" class="link-to-product"></a>
		</div>
		<div class="mdl-card__actions">
			<a href="product.html" class="product-title"><%= zh_lorem_words(20) %></a>
			<div class="mdl-layout-spacer"></div>
			<i class="favorite-button material-icons">favorite_outline</i>
		</div>
	</div>

	<!-- 被 favorite -->
	<div class="product-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--3-col mdl-cell--2-col-tablet mdl-cell--2-col-phone" style="background: url('http://lorempixel.com/400/400') center / cover;">
		<div class="mdl-card--expand">
			<a href="product.html" class="link-to-product"></a>
		</div>
		<div class="mdl-card__actions">
			<a href="product.html" class="product-title"><%= zh_lorem_words(20) %></a>
			<div class="mdl-layout-spacer"></div>
			<i class="favorite-button favorite-added material-icons">favorite</i>
		</div>
	</div>
	<% end %>
</div>