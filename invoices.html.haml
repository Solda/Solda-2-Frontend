.mdl-grid
  %div{:style => "width: 1020px; margin-top: 20px; border-radius: 2px; padding: 8px 16px; box-sizing: border-box; display: flex;"}
    %i.material-icons{:style => "line-height: 36px;"} sort
    %select.plain-select{:name => ""}
      %option{:value => ""} 全部訂單
      %option{:value => ""} 尚未出貨
      %option{:value => ""} 已出貨
      %option{:value => ""} 已取消
      %option{:value => ""} 等待匯款
    %i.material-icons{:style => "line-height: 36px; margin-left: 20px;"} event
    %select.plain-select{:name => ""}
      %option{:value => ""} 全部時間
      %option{:value => ""} 2016.10
      %option{:value => ""} 2016.9
      %option{:value => ""} 2016.8
      %option{:value => ""} 2016.7
      %option{:value => ""} 2016.6
    .search-area{:style => "height: 36px; width: 200px; margin-left: 20px; background: transparent;"}
      %i.material-icons search
      \&#160;
      %input#search{placeholder: "訂單編號、姓名、品項", type: "text",:style => "background: transparent; font-size: 14px;"}/



  %table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp{:style => "width: 1020px; margin-top: 10px;"}
    %thead
      %tr
        %th.mdl-data-table__cell--non-numeric 訂單編號
        %th.mdl-data-table__cell--non-numeric 成立時間
        %th.mdl-data-table__cell--non-numeric 金額
        %th.mdl-data-table__cell--non-numeric 品項
        %th.mdl-data-table__cell--non-numeric 收件人
        %th.mdl-data-table__cell--non-numeric 聯絡方式
        %th.mdl-data-table__cell--non-numeric 寄送
        %th.mdl-data-table__cell--non-numeric 訂單狀態
        %th.mdl-data-table__cell--non-numeric 動作
    %tbody
      - 6.times do
        %tr
          %td.mdl-data-table__cell--non-numeric
            %a{:href => "invoice-detail.html"} #82395
          %td.mdl-data-table__cell--non-numeric
            =lorem_date("%Y.%m.%d", 2015..2016)
          %td $#{10 + rand(1500)}
          %td.mdl-data-table__cell--non-numeric{:style => "max-width: 160px; overflow : hidden; white-space: nowrap; text-overflow: ellipsis;"}
            = zh_lorem_words(13+rand(20))
          %td.mdl-data-table__cell--non-numeric
            = zh_lorem_name
          %td.mdl-data-table__cell--non-numeric{:style => "max-width: 200px; overflow : hidden; white-space: nowrap; text-overflow: ellipsis;"}
            0921757696
            %br/
            %a{:href => "mailto:leolin@me.com"}
              = zh_lorem_email
          %td.mdl-data-table__cell--non-numeric 超商取貨
          %td.mdl-data-table__cell--non-numeric
            %span.order-status.yellow 尚未出貨
          %td.mdl-data-table__cell--non-numeric 
            %button#menu1.mdl-button.mdl-js-button.mdl-button--icon
              %i.material-icons more_vert
            %ul.mdl-menu.mdl-js-menu.mdl-menu--bottom-right{:for => "menu1"}
              %li.mdl-menu__item 評價
              %li.mdl-menu__item 暫緩撥款
        %tr
          %td.mdl-data-table__cell--non-numeric
            %a{:href => "invoice-detail.html"} #83695
          %td.mdl-data-table__cell--non-numeric
            =lorem_date("%Y.%m.%d", 2015..2016)
          %td $570
          %td.mdl-data-table__cell--non-numeric{:style => "max-width: 160px; overflow : hidden; white-space: nowrap; text-overflow: ellipsis;"}
            = zh_lorem_words(13+rand(20))
          %td.mdl-data-table__cell--non-numeric
            = zh_lorem_name
          %td.mdl-data-table__cell--non-numeric{:style => "max-width: 200px; overflow : hidden; white-space: nowrap; text-overflow: ellipsis;"}
            0921476736
            %br/
            %a{:href => "mailto:leolin@me.com"}
              = zh_lorem_email
          %td.mdl-data-table__cell--non-numeric 宅配
          %td.mdl-data-table__cell--non-numeric
            %span.order-status.green 已出貨
          %td.mdl-data-table__cell--non-numeric 
            %button#menu2.mdl-button.mdl-js-button.mdl-button--icon
              %i.material-icons more_vert
            %ul.mdl-menu.mdl-js-menu.mdl-menu--bottom-right{:for => "menu2"}
              %li.mdl-menu__item 評價
              %li.mdl-menu__item 暫緩撥款

        %tr
          %td.mdl-data-table__cell--non-numeric
            %a{:href => "invoice-detail.html"} #83695
          %td.mdl-data-table__cell--non-numeric
            =lorem_date("%Y.%m.%d", 2015..2016)
          %td $#{10 + rand(1500)}
          %td.mdl-data-table__cell--non-numeric{:style => "max-width: 160px; overflow : hidden; white-space: nowrap; text-overflow: ellipsis;"}
            = zh_lorem_words(13+rand(20))
          %td.mdl-data-table__cell--non-numeric
            = zh_lorem_name
          %td.mdl-data-table__cell--non-numeric{:style => "max-width: 200px; overflow : hidden; white-space: nowrap; text-overflow: ellipsis;"}
            0921476736
            %br/
            %a{:href => "mailto:leolin@me.com"}
              = zh_lorem_email
          %td.mdl-data-table__cell--non-numeric 宅配
          %td.mdl-data-table__cell--non-numeric
